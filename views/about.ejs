    /* transform: scale(1.1); */
    
.course__image{
    /* margin: 1rem auto; */
    width:380px;
    height: 300px;
}
.course__image img{
    width: 100%;
    height: 100%;
    transform: scale(0.9);
    /* border-radius: 50px; */
}
.course__info{
    position: relative;
    padding:1.5rem;
    padding-top: 1rem;
}
.course__info p{
    margin:1rem 0 2rem;
}

/* iconssssssssssssssssssssssssssssssssssssssssssss */
.course__info .share {
    display: none;
    place-items: center;
    width: 80%;
    height: 3rem;
    position: absolute;
    bottom: 3.3rem;
    left:2.4rem;
    margin-top: 1rem auto;
    grid-template-columns: auto auto auto auto;
    background: rgb(0, 0, 0);
    border-radius: 20px;
    transition: var(--transition);
}

.course:hover .course__info .share{
    display: grid;

}

.course__info .share a {
  font-size: 1.5rem;
  margin: auto 1rem;
  color: #fff;
}

.course__info .share a:hover {
  color: #0b9269;
}



.btn{
    display: inline-block;
    background: var(--colorwhite);
    color:var(--colorblack);
    padding: 1rem 2rem;
    border:1px solid transparent;
    font-weight: 500;
    transition: var(--transition);
}
.btn:hover{
    background: transparent;
    color: var(--colorwhite);
    border-color: var(--colorwhite);
}
.btn2{
background-color: var(--color_lightred);
color: var(--colorwhite);
}


