*{
    margin:0;
    padding:0;
    outline:0;
    border:0;
    text-decoration: none;
    list-style: none;
    box-sizing: border-box;
}

:root{
    --primarycolor:#480ca8;
    --secodarycolor:#4cc9f0;
    --colorwhite:#fff;
    --colorblack:#000;
    --colorhbtn:#202453;
    --color_lightred:#f75842;
