.container{
    width: 80%;
}
.highlights{
    /* margin-top: 10rem; */ 
    width: 100vw;
    text-align: center;
    margin-bottom:2rem;
}
.highlights__container{
    /* display: grid;
    grid-template-columns: repeat(3, 1fr); */
     display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    gap:2rem;
    margin:auto auto;
    
}
.highlights >h2{
    margin: 3rem;
    color:#000;
}

.course{
    background: linear-gradient(135deg, var(--primarycolor), var(--secodarycolor));
    box-shadow: var(--boxshadow1);
    text-align: center;
    border:1px solid transparent;
    transition: var(--transition);
     width:380px;
     height: 450px;
     margin-bottom: 1rem;
     border-radius: 20px;
}
.course:hover{
     background:var(--primarycolor);
     background:transparent;
     color: #000;
     /* background: transparent; */
    /* transform: scale(1.1); */
    
}
/* .course:hover .c{
