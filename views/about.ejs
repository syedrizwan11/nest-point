    --boxshadow1:0 1rem 2rem rgba(0,0,0,0.2);

    --transition: all 400ms ease;

    --container-lg:80%;
    --container-med:90%;
    --container-sm:94%;

}

body{
    font-family: 'Montserrat', sans-serif;
